{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "customerIdentity",
    "customAttributes",
    "digitalFactories",
    "exchangeRates",
    "processGroups",
    "siteVariables"
  ],
  "properties": {
    "customerIdentity": {
      "type": "string"
    },
    "customAttributes": {
      "type": "array",
      "items": {}
    },
    "digitalFactories": {
      "type": "array",
      "items": {
        "$ref": "DigitalFactory.json"
      }
    },
    "exchangeRates": {
      "type": "array",
      "items": {
        "$ref": "ExchangeRate.json"
      }
    },
    "processGroups": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "required": [
              "identity",
              "createdBy",
              "createdAt",
              "name",
              "description",
              "cidSupported",
              "assemblySupported"
            ],
            "properties": {
              "identity": {
                "type": "string"
              },
              "createdBy": {
                "type": "string"
              },
              "createdAt": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "cidSupported": {
                "type": "boolean"
              },
              "assemblySupported": {
                "type": "boolean"
              }
            }
          }
        ]
      }
    },
    "siteVariables": {
      "type": "array",
      "items": {
        "$ref": "SiteVariable.json"
      }
    }
  }
}
