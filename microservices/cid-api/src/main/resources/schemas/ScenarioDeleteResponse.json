{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "response"
  ],
  "properties": {
    "response": {
      "type": "object",
      "required": [
        "successes",
        "failures"
      ],
      "properties": {
        "successes": {
          "type": "array",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "required": [
                  "componentIdentity",
                  "scenarioIdentity"
                ],
                "properties": {
                  "componentIdentity": {
                    "type": "string"
                  },
                  "scenarioIdentity": {
                    "type": "string"
                  }
                }
              }
            ]
          }
        },
        "failures": {
          "type": "array",
          "items": {
          }
        }
      }
    }
  }
}