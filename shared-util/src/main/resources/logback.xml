<configuration>

    <property name="ROOT_LOG_LEVEL" level="${ROOT_LOG_LEVEL}" default="INFO"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{MM-dd-yyyy HH:mm:ss.SSS} -[%thread] - %logger{50} - %msg%n%xThrowable{full}
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE-THREAD" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <Key>methodName</Key>
            <DefaultValue>notTestMethod</DefaultValue>
        </discriminator>
        <sift>
            <appender name="FILE-${methodName}"
                      class="ch.qos.logback.core.rolling.RollingFileAppender">
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <FileNamePattern>logs/%d/${methodName}.log</FileNamePattern>
                    <maxHistory>30</maxHistory>
                </rollingPolicy>
                <layout class="ch.qos.logback.classic.PatternLayout">
                    <Pattern>%d{ISO8601} - %-5level %C{1} [%M:%L] [%thread] - %msg%n%ex{full}</Pattern>
                </layout>
            </appender>
        </sift>
    </appender>

    <logger name="org.hibernate" level="${ROOT_LOG_LEVEL}" default="OFF"/>
    <logger name="org.hibernate.SQL" level="${ROOT_LOG_LEVEL}" default="OFF"/>
    <logger name="org.hibernate.type" level="${ROOT_LOG_LEVEL}" default="OFF"/>
    <logger name="io.restassured" level="${ROOT_LOG_LEVEL}" default="OFF"/>

    <!-- Restrict logging for browser-level -->
    <logger name="io.netty" level="${ROOT_LOG_LEVEL}" default="OFF"/>
    <logger name="org.asynchttpclient.netty" level="${ROOT_LOG_LEVEL}" default="OFF"/>
    <logger name="org.apache.http" level="${ROOT_LOG_LEVEL}" default="INFO"/>
    <logger name="org.apache" level="${ROOT_LOG_LEVEL}" default="WARN"/>
    <logger name="httpclient" level="${ROOT_LOG_LEVEL}" default="WARN"/>

    <root level="${ROOT_LOG_LEVEL}">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>