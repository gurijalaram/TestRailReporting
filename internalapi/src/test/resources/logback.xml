<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{MM-dd-yyyy HH:mm:ss.SSS} - %X{methodName} - [%thread] - %msg%n%xThrowable{full}
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE-THREAD" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <Key>methodName</Key>
            <DefaultValue>notTestMethod</DefaultValue>
        </discriminator>
        <sift>
            <appender name="FILE-${methodName}"
                      class="ch.qos.logback.core.rolling.RollingFileAppender">
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <FileNamePattern>logs/%d/${methodName}.log</FileNamePattern>
                    <maxHistory>30</maxHistory>
                </rollingPolicy>
                <layout class="ch.qos.logback.classic.PatternLayout">
                    <Pattern>%d{ISO8601} - %-5level %C{1} [%M:%L] [%thread] - %msg%n%ex{full} </Pattern>
                </layout>
            </appender>
        </sift>
    </appender>

    <logger name="org.hibernate" level="info">
        <!--<appender-ref ref="STDOUT" />
        <appender-ref ref="FILE-THREAD" />
        -->
    </logger>

    <logger name="org.hibernate.SQL" level="OFF" />
    <logger name="org.hibernate.type" level="OFF" />
    <logger name="org.apache.http" level="info" />

    <!-- if the mode is empty the tests are running localy. If the mode is defined usually it is given by a Jenkins job -->
    <if condition='property("mode").equals("")'>
        <then>
            <root level="trace">
                <appender-ref ref="STDOUT" />
                <appender-ref ref="FILE-THREAD" />
            </root>
        </then>

        <else>
            <root level="debug">
                <appender-ref ref="STDOUT" />
                <appender-ref ref="FILE-THREAD" />
            </root>
        </else>
    </if>

</configuration>